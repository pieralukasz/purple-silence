{
  "name": "purple-silence-cloud",
  "version": "0.1.0",
  "private": true,
  "bin": {
    "cloud": "bin/cloud.js"
  },
  "scripts": {
    "build": "tsc",
    "buildMjml": "./node_modules/.bin/mjml",
    "build:email": "./scripts/buildEmail.bash",
    "cdk": "cdk",
    "destroy": "ts-node ./scripts/destroyStack.ts",
    "deploy": "./scripts/buildStack.bash",
    "env:ps": "./scripts/setEnvs.ps1",
    "env:sh": "./scripts/setEnvs.sh",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint --ext .ts ./ --color",
    "perm": "chmod +x ./scripts/*",
    "watch": "tsc -w",
    "test": "jest",
    "test:nowatch": "jest --watchAll=false --coverage",
    "schema": "rm -f ./lib/common/schema.graphql && graphql-schema-utilities --includeDirectives --schema \"{root.graphql,./lib/**/*.graphql}\" --output ./lib/common/schema.graphql"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.103.0",
    "@aws-cdk/aws-amplify": "1.103.0",
    "@aws-cdk/aws-appsync": "1.103.0",
    "@aws-cdk/aws-iam": "1.103.0",
    "@aws-cdk/aws-kinesisfirehose": "1.103.0",
    "@aws-cdk/aws-lambda": "1.103.0",
    "@aws-cdk/aws-lambda-nodejs": "1.103.0",
    "@aws-cdk/aws-pinpoint": "1.103.0",
    "@aws-cdk/aws-s3": "1.103.0",
    "@aws-cdk/aws-s3-deployment": "1.103.0",
    "@aws-cdk/aws-secretsmanager": "1.103.0",
    "@aws-cdk/aws-ssm": "1.103.0",
    "@types/aws-lambda": "^8.10.76",
    "@types/jest": "^26.0.23",
    "@types/lambda-tester": "^3.6.1",
    "@types/node": "^15.0.2",
    "aws-cdk": "1.103.0",
    "aws-sdk-mock": "^5.1.0",
    "esbuild": "^0.11.19",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "graphql-schema-utilities": "^1.1.3",
    "jest": "^26.4.2",
    "lambda-tester": "^4.0.1",
    "mjml": "^4.9.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "yargs": "17.0.1"
  },
  "dependencies": {
    "@aws-cdk/core": "1.103.0",
    "aws-sdk": "2.958.0",
    "source-map-support": "^0.5.16"
  }
}
