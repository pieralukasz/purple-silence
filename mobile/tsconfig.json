{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "inputFiles": ["src"],
    "exclude": [
      "./node_modules/react-hook-form/dist/*.d.ts",
      "./node_modules/@types/**/*.d.ts",
      "./node_modules/react-native-paper/**/*.d.ts",
      "./src/**/*.test.{ts,tsx}"
    ]
  }
}

